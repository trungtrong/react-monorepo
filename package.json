    "scripts": {
        "start:react-monorepo": "npx nx serve react-monorepo --mode _local --port=3000",
        "// - BUILDING": "Build app based on the environments",
        "build:react-monorepo:dev": "cross-env NODE_OPTIONS=--max-old-space-size=2048 tsc && nx run react-monorepo:build --mode dev",
        "// - NX WORKSPACE": "nx command",
        "nx:graph": "npx nx graph --watch",
        "// - Mock API": "Mock API",
        "json-server": "json-server --routes routes.json --watch db.json --port 8081",
        "// - TESTING": "Test all modules",
        "test": "vitest",
        "test:watch": "vitest --watch",
        "test:ui": "vitest --ui",
        "// - LINT": "Check Code Rule",
        "preview": "vite preview",
        "lint:react-monorepo": "npx nx lint react-monorepo",
        "lint:react-monorepo:fix": "npx nx lint react-monorepo --fix=true",
        "lint:inventory": "npx nx lint inventory",
        "lint:inventory:fix": "npx nx lint inventory --fix=true",
        "lint:orders": "npx nx lint orders",
        "lint:products": "npx nx lint products",
        "// - FORMAT": "Format Code",
        "prettier:fix:all": "npx nx format:write --all",
        "prettier:fix:react-monorepo:": "npx nx format:write --projects react-monorepo",
        "format:all": "npm run prettier:fix:all && npm run lint:fix"
    },
    "private": true,
